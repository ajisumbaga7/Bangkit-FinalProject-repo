<?xml version="1.0" encoding="utf-8"?>

<!--Use Relative Layout instead of default constrain layout.-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera_get"
    android:background="@drawable/gradien2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_marginLeft="30dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pic1" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentRight="true"
            android:text="All you need is\nstay at home"
            android:textStyle="italic"
            android:textSize="25dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/costum_button4"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="280dp"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:textColor="#636363"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="#DirumahAja\n#IndonesiaBebasCovid"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/a1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/slogan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:text="Covid Symptomps"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/a1"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gambarcard1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/headache"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/gambarcard1"
                    android:text="Headache"
                    android:textAlignment="center"
                    android:textColor="#0C0C0C"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/a1"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gambarcard2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/cough"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/gambarcard2"
                    android:text="Cough"
                    android:textAlignment="center"
                    android:textColor="#0C0C0C"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/a1"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gambarcard3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/sick"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/gambarcard3"
                    android:text="Fever"
                    android:textAlignment="center"
                    android:textColor="#0C0C0C"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/a2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/card11"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:text="Case Update"
            android:textStyle="bold"
            />
        
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/a2"
            app:cardCornerRadius="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/gambarcard4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/group6"
                    />

                <ImageView
                    android:id="@+id/gambarcard7"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/angka5"
                    android:layout_below="@id/gambarcard4"
                    />

                <ImageView
                    android:id="@+id/gambarcard8"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/tulisan1"
                    android:layout_below="@id/gambarcard7"
                    />

                <ImageView
                    android:id="@+id/gambarcard9"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/angka4"
                    android:layout_below="@id/gambarcard4"
                    />

                <ImageView
                    android:id="@+id/gambarcard12"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/tulisan2"
                    android:layout_below="@id/gambarcard9"
                    />

                <ImageView
                    android:id="@+id/gambarcard10"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/angka3"
                    android:layout_below="@id/gambarcard4"
                    />

                <ImageView
                    android:id="@+id/gambarcard11"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/tulisan3"
                    android:layout_below="@id/gambarcard10"
                    />
                <ImageView
                    android:id="@+id/gambarcard5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/group7"
                    />

                <ImageView
                    android:id="@+id/gambarcard6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/group5"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/a3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/card2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:text="Spread of Virus"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/a3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/a4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/card3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:text="Pneumonia Detection"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/classification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/costum_button1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/a4"
            android:text="Pneumonia Detection"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/classification"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bangkitlogo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:textColor="#AEADAD"
                android:textSize="20dp"
                android:text="Powered by :"/>
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>